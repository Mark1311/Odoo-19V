<odoo>
    <record id="view_hide_show_invoice_button_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='restaurant_section']" position="after">
                <block title="POS Hide/Show Invoice Button">
                    <setting string="Hide Invoice Button"
                             help="When enabled, the invoice button will be hidden from the POS payment screen.
                             When disabled, the invoice button will be visible.">
                        <field name="pos_hide_show_invoice_button"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
